<resources>

    <!-- Base application theme. -->
    <style name="MatchITAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="MatchITAppTheme.Splash" parent="MatchITAppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_icon</item>

    </style>


    <style name="MatchITAppTheme.NoActionBar" parent="MatchITAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>
